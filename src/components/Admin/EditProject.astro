<div class="bg-gray-50 border border-gray-300 p-6 rounded-lg shadow-lg">
    <h3 class="text-xl font-semibold mb-4 text-gray-700">Modifica progetto</h3>
    <div class="space-y-4">
        <form action="#" class="flex flex-col space-y-4">
            
            <div>
                <label for="id" class="block text-sm font-medium text-gray-600 mb-1">ID</label>
                <select name="id" id="id" class="text-gray-800 w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-gray-500">

                </select>
            </div>

            <div>
                <label for="titolo" class="block text-sm font-medium text-gray-600 mb-1">Titolo</label>
                <input type="text" id="titolo" class="text-gray-800 w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-gray-500">
            </div>

            <div>
                <label for="descrizione" class="block text-sm font-medium text-gray-600 mb-1">Descrizione</label>
                <textarea name="descrizione" id="descrizione" rows="4" class="text-gray-800 w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-gray-500 resize-none"></textarea>
            </div>

            <button type="submit" class="bg-gray-700 text-white py-2 px-4 rounded-md hover:bg-gray-800 transition duration-150 ease-in-out font-medium">Salva Progetto</button>
        </form>
    </div>
</div>