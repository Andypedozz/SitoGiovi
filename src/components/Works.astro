---
import ProjectCard from "./ProjectCard.astro";

const projects = [
    { title: "Robys", image: "images/robys.jpg" },
    { title: "Si Lo So", image: "images/siloso.jpg" },
    { title: "Opia SS25", image: "images/opia.jpg" },
    { title: "Supermoto", image: "images/supermoto.jpg" },
];
---

<section
    id="work"
    class="py-[140px] bg-[#0a0a0a] relative before:content-[''] before:absolute before:top-0 before:left-0 before:right-0 before:h-px before:bg-linear-to-r before:from-transparent before:via-white/10 before:to-transparent"
>
    <div class="container flex flex-col max-w-[1400px] mx-auto px-6">
        <h2
            class="text-[clamp(2.2rem,5vw,3.5rem)] font-black mb-6 text-center tracking-[-0.02em] relative inline-block w-full after:content-[''] after:absolute after:-bottom-3 after:left-1/2 after:-translate-x-1/2 after:w-20 after:h-1 after:bg-linear-to-r after:from-transparent after:via-[#6366f1] after:to-transparent after:rounded-sm opacity-0 translate-y-10 transition-all duration-800 reveal"
        >
            Our Latest Works
        </h2>
        <div
            class="grid grid-cols-[repeat(auto-fit,minmax(300px,1fr))] gap-6 mt-[60px] mb-16"
        >
            {projects.map(project => <ProjectCard project={project}/>)}
        </div>

        <!-- CTA to projects -->
        <div class="text-center mt-8">
            <a
                href="#talk"
                class="bg-linear-to-br from-[#6366f1] to-[#8b5cf6] text-white no-underline font-extrabold text-[1.3rem] py-[22px] px-[50px] rounded-full inline-flex items-center gap-3 transition-all duration-400 relative overflow-hidden z-1 shadow-[0_15px_40px_rgba(99,102,241,0.3)] hover:-translate-y-[5px] hover:scale-[1.08] hover:shadow-[0_25px_60px_rgba(99,102,241,0.5)] before:content-[''] before:absolute before:inset-0 before:bg-linear-to-br before:from-[#8b5cf6] before:to-[#6366f1] before:opacity-0 before:transition-opacity before:duration-400 hover:before:opacity-100"
            >
                <span class="relative z-1">See all my projects</span>
                <span class="relative z-1">â†’</span>
            </a>
        </div>
    </div>
</section>
